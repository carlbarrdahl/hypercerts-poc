{
	"name": "@workspace/sdk",
	"description": "A react component library",
	"version": "0.1.0",
	"type": "module",
	"files": [
		"dist"
	],
	"module": "./dist/index.js",
	"main": "./dist/index.cjs",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		}
	},
	"scripts": {
		"build": "bunup",
		"dev": "bunup --watch",
		"dev:test": "bun run --cwd test dev",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format .",
		"format:fix": "biome format --write .",
		"tsc": "tsc --noEmit",
		"release": "bumpp --commit --push --tag",
		"publish:ci": "bun publish --access public --no-git-checks",
		"prepare": "simple-git-hooks"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.0",
		"@types/bun": "^1.2.20",
		"@types/react": "^19.1.10",
		"bumpp": "^10.2.3",
		"bunup": "^0.11.0",
		"lightningcss": "^1.30.1",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"simple-git-hooks": "^2.13.1",
		"typescript": "^5.9.2"
	},
	"peerDependencies": {
		"@tanstack/react-query": "^5.85.5",
		"react": "^18.0.0 || ^19.0.0 || ^19.0.0-rc",
		"react-dom": "^18.0.0 || ^19.0.0 || ^19.0.0-rc",
		"typescript": ">=4.5.0"
	},
	"peerDependenciesMeta": {
		"typescript": {
			"optional": true
		}
	},
	"simple-git-hooks": {
		"pre-commit": "bun run lint:fix && git add ."
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/username/repo-name.git"
	},
	"bugs": {
		"url": "https://github.com/username/repo-name/issues"
	},
	"workspaces": [
		"test"
	],
	"homepage": "https://github.com/username/repo-name#readme",
	"dependencies": {
		"@safe-global/protocol-kit": "^6.1.0",
		"@safe-global/safe-core-sdk": "^3.3.5",
		"@safe-global/safe-core-sdk-types": "^5.1.0",
		"@zerodev/ecdsa-validator": "^5.4.9",
		"@zerodev/sdk": "^5.4.41",
		"ky": "^1.9.0",
		"viem": "^2.34.0"
	}
}
