{
  "name": "contracts",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "npx hardhat node",
    "build": "npx hardhat compile",
    "test": "npx hardhat test nodejs",
    "deploy": "npm run build && npx hardhat ignition deploy ignition/modules/HyperVault.ts --network localhost --reset && npm run generate-abi",
